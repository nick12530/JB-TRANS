            "content": "import React, { useState } from 'react';\r\nimport { useNavigate } from 'react-router-dom';\r\nimport { useApp } from '../../context/AppContext';\r\n\r\nexport const LoginPage: React.FC = () => {\r\n  const [role, setRole] = useState<'admin' | 'user'>('user');\r\n  const navigate = useNavigate();\r\n  const { setUser, setIsAuthenticated } = useApp();\r\n\r\n  const handleLogin = (e: React.FormEvent) => {\r\n    e.preventDefault();\r\n    \r\n    // Mock login - create fake user\r\n    const user = {\r\n      id: '1',\r\n      name: role === 'admin' ? 'Admin User' : 'Regular User',\r\n      email: role === 'admin' ? 'admin@mwalimu.com' : 'user@mwalimu.com',\r\n      role,\r\n    };\r\n    \r\n    setUser(user);\r\n    setIsAuthenticated(true);\r\n    navigate('/dashboard');\r\n  };\r\n\r\n  return (\r\n    <div className=\"min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8\">\r\n      <div className=\"max-w-md w-full space-y-8\">\r\n        <div>\r\n          <div className=\"mx-auto h-12 w-12 bg-bright-green rounded-lg flex items-center justify-center\">\r\n            <span className=\"text-white font-bold text-xl\">MT</span>\r\n          </div>\r\n          <h2 className=\"mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-gray-100\">\r\n            Mwalimu Transporters\r\n          </h2>\r\n          <p className=\"mt-2 text-center text-sm text-gray-600 dark:text-gray-400\">\r\n            Miraa Transport Management System\r\n          </p>\r\n        </div>\r\n        \r\n        <form className=\"mt-8 space-y-6\" onSubmit={handleLogin}>\r\n          <div className=\"rounded-md shadow-sm -space-y-px\">\r\n            <div>\r\n              <label htmlFor=\"role\" className=\"sr-only\">\r\n                Select Role\r\n              </label>\r\n              <select\r\n                id=\"role\"\r\n                name=\"role\"\r\n                value={role}\r\n                onChange={(e) => setRole(e.target.value as 'admin' | 'user')}\r\n                className=\"relative block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-gray-100 rounded-t-md focus:outline-none focus:ring-bright-green focus:border-bright-green focus:z-10 sm:text-sm bg-white dark:bg-gray-700\"\r\n                required\r\n              >\r\n                <option value=\"user\">User - Record Daily Activities</option>\r\n                <option value=\"admin\">Admin - Manage All Records</option>\r\n              </select>\r\n            </div>\r\n          </div>\r\n\r\n          <div>\r\n            <button\r\n              type=\"submit\"\r\n              className=\"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-bright-green hover:bg-miraa-green focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-bright-green transition-colors duration-200\"\r\n            >\r\n              Sign In\r\n            </button>\r\n          </div>\r\n          \r\n          <div className=\"text-center\">\r\n            <p className=\"text-sm text-gray-600 dark:text-gray-400\">\r\n              Demo: Select your role and click \"Sign In\"\r\n            </p>\r\n          </div>\r\n        </form>\r\n      </div>\r\n    </div>\r\n  );\r\n};\r\n"
